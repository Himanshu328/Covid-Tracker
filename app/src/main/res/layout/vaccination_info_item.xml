<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardElevation="5dp"
    android:background="@color/black"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/vaccineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="10dp"
                android:text="Vaccination Center"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                app:drawableLeftCompat="@drawable/health" />

            <TextView
                android:id="@+id/vaccination_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="10dp"
                android:text="Location"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                app:drawableLeftCompat="@drawable/location" />

            <TextView
                android:id="@+id/vaccineLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="10dp"
                android:text="Vaccination Time"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                app:drawableLeftCompat="@drawable/time" />

            <TextView
                android:id="@+id/vaccination_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:text="null"
                android:drawablePadding="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="10dp"
                android:text="Vaccine Name"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                app:drawableLeftCompat="@drawable/injection" />

            <TextView
                android:id="@+id/vaccineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="null"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:drawablePadding="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="10dp"
                android:text="Age"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                app:drawableLeftCompat="@drawable/person" />

            <TextView
                android:id="@+id/vaccination_Age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="null"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:drawablePadding="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginTop="10dp"
                android:text="Availability"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                app:drawableLeftCompat="@drawable/ic_baseline_store_mall_directory_24" />

            <TextView
                android:id="@+id/isAvailable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="null"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:drawablePadding="5dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>